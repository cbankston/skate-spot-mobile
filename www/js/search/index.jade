ion-header-bar.bar-positive(align-title='center')  h1.title Skate Spots  .buttons    a.button.button-icon.icon(ng-click="openModal()")      i.ion-plusion-view(view-title="Spots")  ion-content    ion-refresher(pulling-text="Pull to refresh...", on-refresh="refresh_location()")    map(center="{{ center }}" zoom="15")      marker(position="{{ center }}")    .list      a.item.item-avatar(href='#', ng-repeat="spot in spots")        img(src='http://placehold.it/50x50')        h2 {{ spot.name }}